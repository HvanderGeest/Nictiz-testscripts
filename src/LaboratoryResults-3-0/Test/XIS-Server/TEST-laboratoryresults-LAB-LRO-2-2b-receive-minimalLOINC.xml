<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="TEST-xis-2-2b-Receive-minimal"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRO - Scenario 2.2b Receive a single LOINC coded result"/>
    <description value="Scenario 2.2b - Receive a single LOINC coded result"/>

    <nts:fixture id="TEST-scenario-2-2b-minimal-fixture-LOINC"
        href="resources/lr-slr-TEST-Scenario2b-2b.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="lab-Scenarioset2-2b">
        <name value="Scenario 2.2b"/>
        <description value="Receive a single laboratory LOINC coded result."/>
        <nts:include value="test.xis.successfulTransaction" scope="common" sourceId="TEST-scenario-2-2b-minimal-fixture-LOINC"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Organization" count="2"/>
 
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have an LOINC code in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.where(resource.as(Observation).where(code.coding.system = 'http://loinc.org').exists()).count()=1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.value = '999999114').count() = 1"/>
            </assert>
        </action>
        
    </test>
</TestScript>
