<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
  
    <id value="TEST-xis-1-3b-send-results"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRS - Scenario 1.3b - Send separate laboratory results with a LOINC code."/>
    <description value="Scenario 1.3b - Send separate laboratory results with a LOINC code."/>
 
    <nts:fixture id="TEST-scenario-1-3b-fixture"
        href="resources/lr-slr-TEST-Scenario3b-3b1.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="lab-Scenarioset1-3b">
        <name value="Scenario 1.3b"/>
        <description value="Send separate laboratory results with a LOINC code."/>
        
        <nts:include value="test.client.successfulTransaction" scope="common" sourceId="TEST-scenario-1-3b-fixture"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="3"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="3"/>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have an NHG code in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Observation).where(code.coding.where(system = 'http://loinc.org').exists()).count() = 3"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.where(system = 'http://fhir.nl/fhir/NamingSystem/bsn').where(value = '999999114')).count() = 1"/>
            </assert>
        </action>
           
    </test>
</TestScript>
