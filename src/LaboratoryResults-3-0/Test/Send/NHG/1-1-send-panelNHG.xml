<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
  
    <id value="TEST-xis-1-1-send-panel"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRS - Scenario 1.1 - Send a NHG coded panel of laboratory results."/>
    <description value="Scenario 1.1 - Send a NHG coded panel of laboratory results."/>
 
    <nts:fixture id="TEST-scenario-1-1-panel-fixture"
        href="resources/lr-slr-TEST-Scenario1a-1a.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="lab-Scenarioset1-1">
        <name value="Scenario 1.1"/>
        <description value="Send a NHG coded panel of laboratory results."/>
        
        <nts:include value="test.client.successfulTransaction" scope="common" sourceId="TEST-scenario-1-1-panel-fixture"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="2"/>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have an NHG code in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Observation).where(code.coding.where(system = 'https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen').exists()).count() = 4"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.where(system = 'http://fhir.nl/fhir/NamingSystem/bsn').where(value = '999999114')).count() = 1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the labresults belong to a panel."/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Observation).where(extension.where(url = 'http://nictiz.nl/fhir/StructureDefinition/ext-EdifactReferenceNumber' and value = '111222').exists()).count()=4"/>
            </assert>
        </action>
   
    </test>
</TestScript>
