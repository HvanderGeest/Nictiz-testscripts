<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
  
    <id value="TEST-xis-1-5a-send-minimal"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRS - Scenario 1.5a - Send a minimal result with the mandatory elements for a result coded with a NHG code."/>
    <description value="Scenario 1.5a - Send a minimal result with the mandatory elements for a result coded with a NHG code."/>
 
    <nts:fixture id="TEST-scenario-1-5a-fixture"
        href="resources-to-sendreceive/lr-slr-TEST-Scenario5a-5a.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="lab-Scenarioset1-5a">
        <name value="Scenario 1.5a"/>
        <description value="Send a minimal result with the mandatory elements for a result coded with a NHG code."/>
        
        <nts:include value="test.client.successfulTransaction" scope="common" sourceId="TEST-scenario-1-5a-fixture"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="2"/>
        <nts:include value="assert.bundle.numberofcodes" direction="request" resource="Observation" 
            system="https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen" count="1"
        />
        
        <!--Asserts for checking the Patient resource to be compliant with the wiki page on
        https://informatiestandaarden.nictiz.nl/wiki/Lab:1.0.0_Testgegevens_SturenResultaten-->
        <nts:include value="assert.identifier" direction="request" resource="Patient" system="http://fhir.nl/fhir/NamingSystem/bsn" identifier="999999114"/>
        <nts:include value="assert.humanname" direction="request" resource="Patient" 
            use="official" 
            text="Elise Erelies" 
            given="Elise" 
            family="Erelies"
            urlfamily="http://hl7.org/fhir/StructureDefinition/humanname-own-name"
            urliso="http://hl7.org/fhir/StructureDefinition/iso21090-EN-qualifier"
            iso="BR"
        />
        <nts:include value="assert.gender" direction="request" resource="Patient"
            url="http://nictiz.nl/fhir/StructureDefinition/ext-CodeSpecification"
            system="http://terminology.hl7.org/CodeSystem/v3-AdministrativeGender"
            code="F"
        />
        <nts:include value="assert.birthdate" direction="request" resource="Patient" date="1950-11-01"
        />
        
        <!-- Asserts for checking the serving Organization resource(s) to be compliant with the wiki page on
       https://informatiestandaarden.nictiz.nl/wiki/Lab:1.0.0_Testgegevens_SturenResultaten-->  
        <nts:include value="assert.identifier" direction="request" resource="Organization" system="http://fhir.nl/fhir/NamingSystem/ura" identifier="00005111"/>
        <nts:include value="assert.address" direction="request" resource="Organization"
            urlstreet="http://hl7.org/fhir/StructureDefinition/iso21090-ADXP-streetName"
            street="Langelaan"
            urlhousenumber="http://hl7.org/fhir/StructureDefinition/iso21090-ADXP-houseNumber"
            housenumber="1"
            city="Onze Stad"
            postalcode="1234ZZ"
            urltype="http://nictiz.nl/fhir/StructureDefinition/ext-AddressInformation.AddressType"
            systemtype="http://terminology.hl7.org/CodeSystem/v3-AddressUse"
            codetype="WP"
            displaytype="Werkadres"
        />
        <nts:include value="assert.organization.type" direction="request" resource="Organization"
            system="http://nictiz.nl/fhir/NamingSystem/organization-type"
            code="Z3"
            display="Huisartspraktijk (zelfstandig of groepspraktijk)"
        />
        <action>
            <assert>
                <description
                    value="Confirm that the right organization name has been sent along"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Organization).where(name= 'Huisartsenpraktijk Itis').exists()"/>
            </assert>
        </action>
        
        <!-- Asserts for checking one Observation to be compliant with the wiki page on
        https://informatiestandaarden.nictiz.nl/wiki/Lab:1.0.0_Testgegevens_SturenResultaten-->     
        <nts:include value="assert.identifier" direction="request" resource="Observation" system="urn:oid:2.16.840.1.113883.2.4.3.11.999.25.4298.2" identifier="99999"/>  
        <nts:include value="assert.valuequantity" direction="request" resource="Observation"
            quantity="5.4"
            system="http://unitsofmeasure.org"
            code="{Âµmol/L}"
        />
        
        <!-- Asserts for checking the performing Organization resource(s) to be compliant with the wiki page on
   https://informatiestandaarden.nictiz.nl/wiki/Lab:1.0.0_Testgegevens_SturenResultaten-->         
        <nts:include value="assert.identifier" direction="request" resource="Organization" system="http://fhir.nl/fhir/NamingSystem/ura" identifier="00003333"/>
        <nts:include value="assert.address" direction="request" resource="Organization"
            urlstreet="http://hl7.org/fhir/StructureDefinition/iso21090-ADXP-streetName"
            street="Hoofdstraat"
            urlhousenumber="http://hl7.org/fhir/StructureDefinition/iso21090-ADXP-houseNumber"
            housenumber="23"
            city="Zorgstad"
            postalcode="1234AA"
            urltype="http://nictiz.nl/fhir/StructureDefinition/ext-AddressInformation.AddressType"
            systemtype="http://terminology.hl7.org/CodeSystem/v3-AddressUse"
            codetype="WP"
            displaytype="Werkadres"
        />
        <nts:include value="assert.organization.type" direction="request" resource="Organization"
            system="http://nictiz.nl/fhir/NamingSystem/organization-type"
            code="L1"
            display="Laboratorium"
        />
        <action>
            <assert>
                <description
                    value="Confirm the Bundle contains the contact information for the Organization"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Organization).telecom.where(system='phone' and value ='06-11122233').exists()"/>
            </assert>
        </action>

    </test>
</TestScript>
