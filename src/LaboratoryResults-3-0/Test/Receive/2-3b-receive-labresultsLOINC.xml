<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
  
    <id value="TEST-xis-2-3b-Receive-results"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRO - Scenario 2.3b - Receive separate LOINC coded laboratory results."/>
    <description value="Scenario 2.3b - Receive separate LOINC coded laboratory results."/>
 
    <nts:fixture id="TEST-scenario-2-3b-fixture"
        href="resources/lr-slr-TEST-Scenario3b-3b1.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>

    <test id="lab-Scenarioset2-3b">
        <name value="Scenario 2.3b"/>
        <description value="Receive separate LOINC coded laboratory results."/>
        
        <nts:include value="test.xis.successfulTransaction" scope="common" sourceId="TEST-scenario-2-3b-fixture"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Specimen" count="3"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Organization" count="3"/>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have an NHG code in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Observation).where(code.coding.where(system = 'http://loinc.org').exists()).count() = 3"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.value = '999999114').count() = 1"/>
            </assert>
        </action>
           
    </test>
</TestScript>
