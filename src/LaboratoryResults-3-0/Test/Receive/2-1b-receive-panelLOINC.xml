<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
  
    <id value="TEST-xis-2-1-Receive-panel"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRO - Scenario 2.1 - Receive a panel of laboratory results with a LOINC code."/>
    <description value="Scenario 2.1 - Receive a panel of laboratory results with a LOINC code."/>
 
    <nts:fixture id="TEST-scenario-2-1-panel-fixture"
        href="resources/resources-to-send/lr-slr-TEST-Scenario1b-1b.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>

    <test id="lab-Scenarioset2-1">
        <name value="Scenario 2.1"/>
        <description value="Receive a panel of laboratory results with a LOINC code."/>
        
        <nts:include value="test.xis.successfulTransaction" scope="common" sourceId="TEST-scenario-2-1-panel-fixture"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Organization" count="2"/>
        

        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have a LOINC code in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Observation).where(code.coding.where(system = 'http://loinc.org').exists()).count() = 4"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.where(system = 'http://fhir.nl/fhir/NamingSystem/bsn').where(value = '999999114')).count() = 1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the labresults belong to a panel."/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.as(Observation).where(extension.where(url = 'http://nictiz.nl/fhir/StructureDefinition/ext-EdifactReferenceNumber' and value = '111222').exists()).count()=4"/>
            </assert>
        </action>
        
   
    </test>
</TestScript>
