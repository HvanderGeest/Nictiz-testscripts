<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
  
    <id value="TEST-xis-2-5a-Receive-minimal"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRO - Scenario 2.5a - Receive a minimal result with the mandatory elements for a result coded with a NHG code."/>
    <description value="Scenario 2.5a - Receive a minimal result with the mandatory elements for a result coded with a NHG code."/>
 
    <nts:fixture id="TEST-scenario-2-5a-fixture"
        href="resources/lr-slr-TEST-Scenario5a-5a.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="lab-Scenarioset2-5a">
        <name value="Scenario 2.5a"/>
        <description value="Receive a minimal result with the mandatory elements for a result coded with a NHG code."/>
        
        <nts:include value="test.xis.successfulTransaction" scope="common" sourceId="TEST-scenario-2-5a-fixture"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Organization" count="2"/>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resource has an NHG code in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Observation).where(code.coding.where(system = 'https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen').exists()).count() = 1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.value = '999999114').count() = 1"/>
            </assert>
        </action>
        

    </test>
</TestScript>
