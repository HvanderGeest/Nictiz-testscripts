<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="TEST-xis-2-2a-Receive-minimal"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRO - Scenario 2.2a Receive a single NHG coded result"/>
    <description value="Scenario 2.2a - Receive a single NHG coded result"/>

    <nts:fixture id="TEST-scenario-2-2a-minimal-fixture-NHG"
        href="resources/lr-slr-TEST-Scenario2a-2a.{$_FORMAT}"/>
    <nts:includeDateT value="yes"/>
    
    <test id="lab-Scenarioset2-2a">
        <name value="Scenario 2.2a"/>
        <description value="Receive a single laboratory NHG coded result."/>
        <nts:include value="test.xis.successfulTransaction" scope="common" sourceId="TEST-scenario-2-2a-minimal-fixture-NHG"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.response.numResources" scope="common" resource="Organization" count="2"/>
 
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have a NHG code in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.where(resource.as(Observation).where(code.coding.system = 'https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen').exists()).count()=1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the right patient has been sent along"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.as(Patient).where(identifier.where(system = 'http://fhir.nl/fhir/NamingSystem/bsn').where(value = '999999114')).count() = 1"/>
            </assert>
        </action>
        
    </test>
</TestScript>
