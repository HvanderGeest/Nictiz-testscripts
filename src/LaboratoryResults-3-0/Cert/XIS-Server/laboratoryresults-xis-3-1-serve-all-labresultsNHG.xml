    <test id="lab-Scenarioset3-1">
        <name value="Scenario 3.1"/>
        <description value="Scenario 3.1 - Query All LaboratoryResults of person 1."/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="?category=http://terminology.hl7.org/CodeSystem/observation-category|laboratory&amp;_include=Observation:specimen:Specimen&amp;_include=Observation:performer:Organization&amp;Observation:subject:Patient"
            description="Test XIS server to serve LaboratoryResults - All known LaboratoryResults Observations from person 1."/>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="X"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Specimen" count="X"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Organization" count="X"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="X"/>
        
        <nts:include value="assert.response.resourceWith" code="68688-1"/>
        <nts:include value="assert.response.resourceWithLoinc" code="34797-1"/>
        <nts:include value="assert.response.resourceWithLoinc" code="34781-5"/>
        
        <nts:include value="assert.response.unknownMasterIdentifier" nts:in-targets="#default"
            code="68688-1"
            masterIdentifier="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.3024.1522314975.220898"/>
        <nts:include value="assert.response.unknownMasterIdentifier" nts:in-targets="#default"
            code="34797-1"
            masterIdentifier="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.3024.1522314975.220879"/>
        <nts:include value="assert.response.unknownMasterIdentifier" nts:in-targets="#default"
            code="34781-5"
            masterIdentifier="urn:oid:1.2.276.0.7230010.3.1.2.1787205428.3024.1522314975.220899"/>
    </test>
</TestScript>


