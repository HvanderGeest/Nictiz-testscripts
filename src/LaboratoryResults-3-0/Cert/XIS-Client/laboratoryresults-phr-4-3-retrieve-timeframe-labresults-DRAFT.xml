<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="lab-R4-3-0-phr-4-3"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - PHR client - Scenario 4.3"/>
    <description value="Scenario 4.3 - Retrieve LaboratoryResults"/>
    
    <nts:patientTokenFixture href="lab-nl-core-patient-XXX-Aantrekker-token.xml"/>
    <!--    <nts:fixture id="scenario-3-2-bundle-fixture"
        href="resources/medmij-pdfa-Bundle-kwalificatie2.xml"/>
    <nts:includeDateT value="yes"/>-->
    
    <test id="lab-Scenarioset4-3">
        <name value="Scenario 4.3"/>
        <description value="Scenario 4.3 - Query specific INR LaboratoryResults of person 1."/>
        <nts:include value="medmij/test.phr.search" scope="common"
            resource="Observation"
            params="?category=http://terminology.hl7.org/CodeSystem/observation-category|laboratory&amp;effectiveDateTime=ge${DATE, T, D,-180}&amp;effectiveDateTime=le${DATE, T, D,-0}" 
            description="Test PHR client to retrieve all known LaboratoryResults Observations for a specific timeframe from person 1"/>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="5"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
    </test>
    
</TestScript>
