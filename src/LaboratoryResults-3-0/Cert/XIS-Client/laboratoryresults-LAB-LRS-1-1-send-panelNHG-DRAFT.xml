<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <!--    is dit client?-->
    <id value="phr-1-1-send-panel"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - LAB-LRS - Scenario 1.1 - Send a panel of laboratory results in NHG."/>
    <description value="Scenario 1.1 - Send a panel of laboratory results in NHG."/>
    
    <nts:patientTokenFixture href="lab-nl-core-patient-XXX-Aantrekker-token.xml"/> 
    <!--NIEUWE TOKEN NODIG, hoe maak ik die aan?
    In het Technisch ontwerp nakijken wat voor authenticatie-->
    <nts:fixture id="scenario-1-1-panel-fixture-NHG"
        href="lr-slr-KWAL-KC-NHG-Scenario1-KCNHG1.xml"/>
    
    <test id="lab-Scenarioset1-1">
        <name value="Scenario 1.1"/>
        <description value="Send a panel of laboratory results in NHG."/>
        
        <nts:include value="lab/test.xis.successfulBatch" scope="common"
            sourceId="scenario-1-1-panel-fixture-NHG"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="2"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"/>
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have an NHG code in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.ofType(Observation).code.coding.where(system = 'https://referentiemodel.nhg.org/tabellen/nhg-tabel-45-diagnostische-bepalingen').count() = 4"/>
            </assert>
        </action>
   
    </test>
</TestScript>
