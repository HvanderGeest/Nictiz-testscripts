<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-1-2-send-minimal"/>
    <version value="R4-3.0"/>
    <name value="LaboratoryResults - PHR client - Scenario 1.2a"/>
    <description value="Scenario 1.2a - Send single result"/>
    
    <nts:patientTokenFixture href="lab-nl-core-patient-XXX-Aantrekker-token.xml"/> 
    <!--NIEUWE TOKEN NODIG?-->
    <nts:fixture id="scenario-1-2a-minimal-fixture-LOINC"
        href="lr-slr-KWAL-KC-LOINC-Scenario2a-KCLOINC2a.xml"/>
    <nts:includeDateT value="yes"/>
    
    <test id="lab-Scenarioset1-2a">
        <name value="Scenario 1.2a"/>
        <description value="Send a single laboratory result."/>
        <nts:include value="medmij/test.phr.successfulTransaction" scope="common" sourceId="scenario-1-2a-minimal-fixture-LOINC"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Observation" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Specimen" count="1"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Organization" count="2"/>
        <nts:include value="assert.request.numResources" scope="common" resource="Patient" count="1"/>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resources have a LOINC code in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.ofType(Observation).code.coding.where(system = 'http://loinc.org').count() = 1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resource has the right LOINC code in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.ofType(Observation).code.coding.where(code = '6301-6').count() = 1"/>
            </assert>
        </action>
        
        <action>
            <assert>
                <description
                    value="Confirm that the Observation resource has the right value in the code element"/>
                <direction value="request"/>
                <expression value="Bundle.entry.resource.ofType(Observation).where(valueQuantity = 2.3).count() = 1"/>
<!--                dit is nog geen juiste assert-->
            </assert>
        </action>
    </test>
</TestScript>
