<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir"
    xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="mp9-ma-serve-2-1"/>
    <version value="r4-mp9-2.0.0"/>
    <name value="Medication Process 9 2.0.0  - MedicationAgreement (NL: MedicatieAfspraak) - Serve - Scenario 1.1"/>
    <description value="Scenario 2.1 - Aanvullende instructie"/>
    <test id="Scenario-2-1">
        <name value="Scenario 2.1"/>
        <description value="Aanvullende instructie"/>
        <nts:include value="operation-search">
            <nts:with-parameter name="description"
                value="Test server to serve MedicationRequest resource(s) for MedicationAgreement"/>
            <nts:with-parameter name="resource" value="MedicationRequest"/>
            <nts:with-parameter name="params"
                value="?patient.identifier=http://fhir.nl/fhir/NamingSystem/bsn|999900420&amp;category=http://snomed.info/sct|16076005&amp;_include=MedicationRequest:medication"/>
        </nts:include>
        <nts:include value="assert-responseSearchBundleSuccess" scope="common"/>
        <nts:include value="assert-responseBundleContent-noMM"/>
        <nts:include value="assert-returnCount" scope="common">
            <nts:with-parameter name="resource" value="MedicationRequest"/>
            <nts:with-parameter name="count" value="1"/>
        </nts:include>
        <nts:include value="assert-returnEntryCountAtLeast" scope="project">
            <nts:with-parameter name="count" value="2"/>
            <nts:with-parameter name="breakdown"
                value="(Consists of at least 1 MedicationRequest and 1 Medication resources.)"/>
        </nts:include>
        <nts:include value="assert-returnEntryCountAtLeast" scope="project">
            <nts:with-parameter name="count" value="2"/>
            <nts:with-parameter name="breakdown"
                value="(Consists of at least 1 MedicationRequest and 1 Medication resources.)"/>
        </nts:include>
        <nts:include value="assert-returnMedicationRequestMedication-noReasonOrStop" scope="project">
            <nts:with-parameter name="productCode" value="49484"/>
            <nts:with-parameter name="productSystem" value="urn:oid:2.16.840.1.113883.2.4.4.10"/>
        </nts:include>
    </test>
</TestScript>