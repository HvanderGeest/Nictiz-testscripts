<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-prescr-receive-2-1"/>
   <name value="MP9 - Server - Scenario 2.1 - Receive Prescription"/>
   <description value="Scenario 2.1 - Receive Prescription for C. XXX_Coenen."/>
   <nts:fixture id="mv-mp-vo-tst-2-1-aanvullendeinstructie-v20"
                href="fixtures/mv-mp-vo-tst-2-1-aanvullendeinstructie-v20.xml"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario2-1-receive-prescription">
      <name value="Scenario 2.1"/>
      <description value="Receive Prescription in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <accept value="xml"/>
            <contentType value="xml"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="MP9-Request-ID"/>
               <value value="${UUID}"/>
            </requestHeader>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="mv-mp-vo-tst-2-1-aanvullendeinstructie-v20"/>
         </operation>
      </action>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationRequest"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Patient"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="PractitionerRole"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Practitioner"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Organization"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
</TestScript>
