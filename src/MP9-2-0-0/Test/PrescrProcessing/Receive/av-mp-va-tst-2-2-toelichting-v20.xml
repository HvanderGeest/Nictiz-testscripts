<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="server">
   <id value="mp9-prescr-proc-receive-2-2"/>
   <name value="MP9 - Server - Scenario 2.2 - Receive Prescription Processing"/>
   <description value="Scenario 2.2 - Receive Prescription Processing for C. XXX_Coenen."/>
   <nts:fixture id="av-mp-va-tst-2-2-toelichting-v20"
                href="fixtures/av-mp-va-tst-2-2-toelichting-v20.xml"/>
   <nts:includeDateT value="yes"/>
   <test id="scenario2-2-receive-prescription-processing">
      <name value="Scenario 2.2"/>
      <description value="Receive Prescription Processing in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test server to handle a Bundle of type transaction."/>
            <accept value="xml"/>
            <contentType value="xml"/>
            <destination value="1"/>
            <origin value="1"/>
            <requestHeader>
               <field value="MP9-Request-ID"/>
               <value value="${UUID}"/>
            </requestHeader>
            <requestHeader>
               <field value="Prefer"/>
               <value value="return=representation"/>
            </requestHeader>
            <sourceId value="av-mp-va-tst-2-2-toelichting-v20"/>
         </operation>
      </action>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="MedicationDispense"
                   count="2"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Patient"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Organization"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Medication"
                   count="1"/>
   </test>
</TestScript>
