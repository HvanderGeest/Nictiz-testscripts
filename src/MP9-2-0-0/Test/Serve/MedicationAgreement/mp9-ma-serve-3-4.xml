        <nts:with-parameter name="scenarioDescription" value="Onderbreken medicatieafspraak, LET OP: onderbreking medicatieafspraak van scenario 2.4"/>
        <nts:with-parameter name="scenarioPatient" value="C-XXX-Coenen"/>
    </nts:include>
    
    <test id="Scenario-4-4">
        <nts:include value="mp9-ma-serve-operationAndGeneralAsserts">
            <nts:with-parameter name="scenarioset" value="4"/>
