<TestScript xmlns:nts="http://nictiz.nl/xsl/testscript"
            xmlns="http://hl7.org/fhir"
            nts:scenario="client">
   <id value="mp9-reppropma-send--"/>
   <name value="MP9 - Client - Scenario . - Send ReplyProposalMA"/>
   <description value="Scenario . - Send ReplyProposalMA for C. XXX_Brugge."/>
   <nts:fixture id="mp-am-tst-nav-vma-met-lengte-gewicht-v20"
                href="fixtures/mp-am-tst-nav-vma-met-lengte-gewicht-v20.xml"/>
   <nts:includeDateT value="yes"/>
   <variable>
      <name value="patient-id"/>
      <expression value="(Bundle.entry.resource as Patient).id"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable>
      <name value="Communication-1"/>
      <expression value="(Bundle.entry.resource as Communication).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable>
      <name value="PractitionerRole-1"/>
      <expression value="(Bundle.entry.resource as PractitionerRole).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable>
      <name value="Practitioner-1"/>
      <expression value="(Bundle.entry.resource as Practitioner).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <variable>
      <name value="Organization-1"/>
      <expression value="(Bundle.entry.resource as Organization).id[0]"/>
      <sourceId value="transaction-response-fixture"/>
   </variable>
   <test id="scenario--send-reppropma">
      <name value="Scenario ."/>
      <description value="Send ReplyProposalMA in a transaction Bundle"/>
      <action>
         <operation>
            <type>
               <system value="http://hl7.org/fhir/testscript-operation-codes"/>
               <code value="transaction"/>
            </type>
            <description value="Test client to POST a Bundle of type transaction."/>
            <destination value="1"/>
            <origin value="1"/>
            <responseId value="transaction-response-fixture"/>
            <sourceId value="mp-am-tst-nav-vma-met-lengte-gewicht-v20"/>
         </operation>
      </action>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Communication"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Patient"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="PractitionerRole"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Practitioner"
                   count="1"/>
      <nts:include value="assert.request.numResources"
                   scope="common"
                   resource="Organization"
                   count="1"/>
   </test>
   <teardown>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="Communication"/>
            <encodeRequestUrl value="true"/>
            <params value="${Communication-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="PractitionerRole"/>
            <encodeRequestUrl value="true"/>
            <params value="${PractitionerRole-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="Practitioner"/>
            <encodeRequestUrl value="true"/>
            <params value="${Practitioner-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://terminology.hl7.org/CodeSystem/testscript-operation-codes"/>
               <code value="delete"/>
            </type>
            <resource value="Organization"/>
            <encodeRequestUrl value="true"/>
            <params value="${Organization-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://touchstone.com/fhir/extended-operation-codes"/>
               <code value="purge"/>
            </type>
            <resource value="Patient"/>
            <encodeRequestUrl value="true"/>
            <params value="${patient-id}/$purge"/>
         </operation>
      </action>
   </teardown>
</TestScript>
