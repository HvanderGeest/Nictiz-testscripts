<?xml version="1.0" encoding="UTF-8"?>
<!--
    Update a Task at the sending XIS using a create operation.
    @param expected-status: The expected `.status` of the Task.
    @param direction: The direction that should be tested (request/response).
    @param task-update-fixture-id: The fixture id to use to update the Task (only needed for internal tests).
-->
<nts:component xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript">
    <action>
        <operation>
            <type>
                <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                <code value="update"/>
            </type>
            <resource value="Task"/>
            <description value="Test sending XIS to handle an update to the eOverdracht Task"/>
            <destination value="1"/>
            <origin value="1"/>
            <params value="/${task-id}"/>
            <requestHeader>
                <!-- 0..* Each operation can have one or more header elements -->
                <field value="Authorization"/>
                <!-- 1..1 HTTP header field name: OAuth access token -->
                <value value="${patient-token-id}"/>
                <!-- 1..1 HTTP headerfield value: UUID4 -->
            </requestHeader>
            <sourceId value="{$task-update-fixture-id}" nts:in-targets="internal"/>
        </operation>
    </action>
    <action>
        <assert>
            <description value="Confirm that Task.status has been changed to '{$expected-status}'"/>
            <direction value="{$direction}"/>
            <expression value="Task.status = '{$expected-status}'"/>
        </assert>
    </action>
</nts:component>
