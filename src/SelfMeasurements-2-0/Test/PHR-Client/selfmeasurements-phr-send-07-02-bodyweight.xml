<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="phr-7-2-send-bodyweight"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - PHR Server - Scenario 7.2 - Send most recent bodyweight Observation resource"/>
    <description value="Scenario 7.2 - Send most recent bodyweight Observation resource"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Herder-token.xml"/>
    <nts:fixture id="scenario-7-2-bundle-fixture"
        href="bundles/send/selfmeasurements-send-scenario-7-2-bodyweight-bundle.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario7-2-send-most-recent-bodyweight">
        <name value="Scenario 7.2"/>
        <description value="Send most recent bodyweight Observation resource"/>
        <nts:include value="medmij/test.phr.successfulBatch" scope="common"
            sourceId="scenario-7-2-bundle-fixture"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="2"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bodyweight value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=81.5 and unit='kg').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bodyweight value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=81 and unit='kg').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
