<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-2-2-send-bodyheight"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Scenario 2.2 - Send most recent bodyheight Observation resource"/>
    <description value="Scenario 2.2 - Send most recent bodyheight Observation resource"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Herder-token.xml"/>
    <nts:fixture id="scenario-2-2-bundle-fixture"
        href="bundles/send/selfmeasurements-send-scenario-2-2-bodyheight-bundle.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario2-2-send-most-recent-bodyheight">
        <name value="Scenario 2.2"/>
        <description value="Send most recent bodyheight Observation resource"/>
        <nts:include value="medmij/test.xis.successfulBatch" scope="common"
            sourceId="scenario-2-2-bundle-fixture"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="2"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bodyheight value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=195 and unit='cm').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bodyheight value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=191 and unit='cm').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
