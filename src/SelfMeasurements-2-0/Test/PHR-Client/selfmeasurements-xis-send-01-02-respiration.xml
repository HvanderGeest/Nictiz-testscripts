<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-send-01-02-respiration"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Scenario 1.2 - Send most recent respiration Observation resource"/>
    <description value="Scenario 1.2 - Send most recent respiration Observation resource"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Herder-token.xml"/>
    <nts:fixture id="scenario-1-2-bundle-fixture"
        href="bundles/send/selfmeasurements-send-scenario-1-2-respiration-bundle.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario1-2-send-most-recent-respiration">
        <name value="Scenario 1.2"/>
        <description value="Send most recent respiration Observation resource"/>
        <nts:include value="medmij/test.xis.successfulBatch" scope="common"
            sourceId="scenario-1-2-bundle-fixture"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="2"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct respiration value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).component.value.where(value=24 and unit='breaths per minute').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct respiration value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).component.value.where(value=14 and unit='breaths per minute').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
