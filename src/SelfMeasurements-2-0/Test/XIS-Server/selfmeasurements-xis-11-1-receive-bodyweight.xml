<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-11-1-receive-most-recent-bodyweight"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Scenario 11.1 - Receive most recent BodyWeight Observation resource"/>
    <description value="Scenario 11.1 - Receive most recent BodyWeight Observation resource"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Herder-token.xml"/>
    <nts:fixture id="scenario-11-1-bundle-fixture"
        href="resources-send/selfmeasurements-send-scenario-11-1-bundle.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario11-1-receive-most-recent-bodyweight">
        <name value="Scenario 11.1"/>
        <description value="Receive most recent BodyWeight Observation resource"/>
        <nts:include value="medmij/test.xis.successfulBatch" scope="common"
            sourceId="scenario-11-1-bundle-fixture"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Confirm that the Observation resource has a LOINC code for Bodyweight in the code element"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).code.coding.where(code = '29463-7').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
