<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-8-2-serve-latest-bloodglucose"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Test Scenario 8.2 - Serve latest bloodglucose observation resource"/>
    <description value="Scenario 8.2 - Serve latest bloodglucose Observation resources"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Smorenburg-token.xml"/>

    <test id="scenario8-2-serve-all-bloodglucose">
        <name value="Scenario 8.2"/>
        <description value="Serve latest bloodglucose Observation resources"/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="/$lastn?category=http://snomed.info/sct|49581000146104"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>

        <action>
            <assert>
                <description value="Confirm that the latest observation resource has the correct bloodglucose value"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=5.2 and unit='mmol/l').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
