<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-2-3-serve-period-saturations"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Test Scenario 2.3 - Serve saturation within period"/>
    <description value="Scenario 2.3 - Serve period saturation Observation resources"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Smorenburg-token.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario2-3-serve-all-saturations">
        <name value="Scenario 2.3"/>
        <description value="Serve period saturation Observation resources"/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|59408-5&amp;date=ge${DATE, T, D,-365}&amp;date=le${DATE, T, D,-20}"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="1"/>

        <action>
            <assert>
                <description value="Confirm that both returned values are correct"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=93 and unit='percent').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
