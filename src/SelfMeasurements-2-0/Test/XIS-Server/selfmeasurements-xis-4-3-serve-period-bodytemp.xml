<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="server">
    <id value="xis-4-3-serve-period-bodyTemperatures"/>
    <version value="stu3-2.0"/>
    <name
        value="SelfMeasurements - XIS Server - Test Scenario 4.3 - Serve bodyTemperature within period"/>
    <description value="Scenario 4.3 - Serve period bodyTemperature Observation resources"/>
    <nts:patientTokenFixture href="selfmeasurements-XXX-Smorenburg-token.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario4-3-serve-all-bodyTemperatures">
        <name value="Scenario 4.3"/>
        <description value="Serve period bodyTemperature Observation resources"/>
        <nts:include value="medmij/test.xis.successfulSearch" scope="common"
            resource="Observation"
            params="?code=http://loinc.org|8310-5&amp;date=ge${DATE, T, D,-50}&amp;date=le${DATE, T, D,-20}"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Observation" count="3"/>

        <action>
            <assert>
                <description value="Confirm that both returned values are correct"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=36.7 and unit='degree Celsius').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that both returned values are correct"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=38.3 and unit='degree Celsius').exists()"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that both returned values are correct"/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Observation).value.where(value=37.4 and unit='degree Celsius').exists()"/>
            </assert>
        </action>
    </test>
</TestScript>
