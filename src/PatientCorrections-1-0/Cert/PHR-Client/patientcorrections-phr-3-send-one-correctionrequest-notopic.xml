<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="phr-3-send-one-correctionrequest-notopic"/>
    <version value="r4-1.0.0"/>
    <name
        value="PatientCorrections - PHR Client - Scenario 3 - Send one correction request, no topic"/>
    <description value="Scenario 3 - Send one correction request, no topic"/>
    <nts:patientTokenFixture href="nl-core-Patient-1285290-token.xml"/>
    <nts:fixture id="scenario-3-bundle-fixture"
        href="resources-specific/dwv-Transaction-Scenario-3.xml"/>
    <nts:includeDateT value="yes"/>

    <test id="scenario3-send-one-correctionrequest-notopic">
        <name value="Scenario3"/>
        <description value="Send one correction request, no topic"/>
        <nts:include value="medmij/test.phr.successfulTransaction" scope="common"
            sourceId="scenario-3-bundle-fixture" preferHeader="true"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Patient" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Organization" count="1"/>
        <nts:include value="assert.request.numResources" scope="common"
            resource="Communication" count="1"/>
        <action>
            <assert>
                <description value="Confirm that that the HTTP Prefer header with value 'return=representation' is present in the request."/>
                <direction value="request"/>
                <headerField value="Prefer"/>
                <value value="return=representation"/>
            </assert>
        </action>
    </test>
</TestScript>
