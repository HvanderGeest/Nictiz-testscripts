<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="imm-receiving-2-1"/>
    <version value="R4-4.0.1"/>
    <name value="Immunization - Client - Test Scenario 2.1 - Retrieve Immunization resources of Pieterse"/>
    <description value="Scenario 2.1 - Retrieve Immunization resources of Pieterse"/>
    <nts:patientTokenFixture href="imm-patient-Pieterse-token.xml"/>

    <test id="03-retrieve-vaccination">
        <name value="Scenario 2.1 - Immunization"/>
        <description
            value="Query Immunization resource including the patient and practitioner resource"/>
        <nts:include value="medmij/test.phr.search" scope="common"
            resource="Immunization"
            params="?_include=Immunization:patient&#38;_include=Immunization:performer"/>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Immunization" count="3"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <!-- <nts:include value="assert.response.numResources" scope="common"
            resource="Medication" count="3"/> --> <!-- De medication resources ontbreken waarschijnlijk omdat deze niet in de Get staan   -->
        <nts:include value="assert.response.numResources" scope="common"
            resource="Organization" count="2"/>
    </test>
</TestScript>