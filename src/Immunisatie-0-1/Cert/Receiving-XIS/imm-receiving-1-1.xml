<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://hl7.org/fhir/STU3/testscript.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TestScript xmlns="http://hl7.org/fhir" xmlns:nts="http://nictiz.nl/xsl/testscript"
    nts:scenario="client">
    <id value="imm-receiving-1-1"/>
    <version value="stu3-3.0"/>
    <name value="Immunization - Client - Test Scenario 0.1 - Retrieve Immunization resources of van Putten"/>
    <description value="Scenario 1.1 - Retrieve Immunization resources of van Putten"/>
    <nts:patientTokenFixture href="imm-patient-van-Putten-token.xml"/>

    <test id="01-retrieve-vaccination">
        <name value="Scenario 1.1 - Immunization"/>
        <description
            value="Query Immunization resource including the patient and practitioner resource"/>
        <nts:include value="medmij/test.phr.search" scope="common"
            resource="Immunization"
            params="?_include=Immunization:patient&#38;_include:iterate=Immunization:performer"/>
        <nts:include value="canary-assert.response.successfulSearch" scope="common"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Immunization" count="1"/>
        <nts:include value="assert.response.numResources" scope="common"
            resource="Patient" count="1"/>
        <action>
            <assert>
                <description value="Test if vaccinecode corresponds to test material" />
                <direction value="response" /> 
                <expression value= "Immunization.vaccineCode.where(coding.code = '2924528').exists()" />
            </assert>
        </action>
        <action>
            <assert>
                <description value="Test if status is completed" />
                <direction value="response" /> 
                <expression value= "Immunization.where(status = 'completed').exists()" />
            </assert>
        </action>
    </test>
</TestScript>