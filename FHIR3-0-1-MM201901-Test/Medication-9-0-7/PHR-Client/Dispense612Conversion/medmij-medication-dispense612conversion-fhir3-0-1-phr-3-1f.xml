    <test id="01-ServeDispense612Conversion-AdmAgrAndDispense">
        <name value="01-ServeDispense612Conversion-AdmAgrAndDispense"/>
        <description value="Nictiz MedMij Medication - Dispense 612 Conversion - PHR Client - Scenario 3.1f - Supply Administration Agreement/Dispense - Filter on Useperiod to T-21"/>
        <action>
            <operation>
                <type>
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>
                    <code value="search"/>
                </type>
                <resource value="MedicationDispense"/>
                <description value="Do query"/>
                <accept value="xml"/>
                <contentType value="none"/>
                <params value="?category=http://snomed.info/sct|373784005,http://snomed.info/sct|422037009&amp;_include=MedicationDispense:medication&amp;_include=MedicationDispense:patient&amp;_include=MedicationDispense:performer&amp;periodofuse=lt${DATE, T, D,-21}"/>
                <requestHeader>
                    <!-- 0..* Each operation can have one or more header elements -->
                    <field value="Authorization"/>
                    <!-- 1..1 HTTP header field name: OAuth access token -->
                    <value value="${patient-token-id}"/>
                    <!-- 1..1 HTTP headerfield value: UUID4 -->
                </requestHeader>
            </operation>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK)."/>
                <direction value="response"/>
                <responseCode value="200"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned resource type is Bundle."/>
                <direction value="response"/>
                <resource value="Bundle"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle type is searchset."/>
                <direction value="response"/>
                <expression value="Bundle.type"/>
                <operator value="equals"/>
                <value value="searchset"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle total value matches or is less than the number of entries in the Bundle. The included resources should not be counted as entries in the Bundle.total."/>
                <direction value="response"/>
                <expression value="Bundle.total.toInteger() &lt;= Bundle.entry.where(search.empty() or search.mode = 'match').count()"/>
            <warningOnly value="true"/>
            </assert>
        </action>
       <action>
            <assert>
                <description value="Confirm that all returned resources contain a meta.profile tag."/>
                <direction value="response"/>
                <expression value="Bundle.entry.where(resource.meta.profile.exists()).count() = Bundle.entry.count()"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that patient resource contain a meta.profile tag matching the expected profile."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Patient).meta.profile"/>
                <operator value="equals"/>
                <value value="${patient-profile}"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that administration agreement resource contain a meta.profile tag matching the expected profile."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(MedicationDispense).where(category.coding.code = '422037009').meta.profile"/>
                <operator value="equals"/>
                <value value="${administrationagreement-profile}"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that dispense resources contain a meta.profile tag matching the expected profile."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(MedicationDispense).where(category.coding.code = '373784005').meta.profile"/>
                <operator value="equals"/>
                <value value="${dispense-profile}"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that medication resource contain a meta.profile tag matching the expected profile."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Medication).meta.profile"/>
                <operator value="equals"/>
                <value value="${product-profile}"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that organization resource contain a meta.profile tag matching the expected profile."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.ofType(Organization).meta.profile"/>
                <operator value="equals"/>
                <value value="${organization-profile}"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that all returned resources contain a meta.profile tag."/>
                <direction value="response"/>
                <expression value="Bundle.entry.resource.where(is(OperationOutcome).not()).meta.profile.count() = Bundle.entry.resource.where(is(OperationOutcome).not()).count()"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle conforms to the base FHIR specification and the resources to the stated profiles in the meta.profile tag."/>
                <direction value="response"/>
                <validateProfileId value="Bundle-profile"/>
            <warningOnly value="true"/>
            </assert>
        </action>
        </test>
