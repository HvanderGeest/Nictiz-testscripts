<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="medmij-eappt-fhir3-0-1-xis-1-1-serve-future-json" />
	<url value="http://nictiz.nl/fhir/fhir3-0-1/TestScript/medmij-eappt-fhir3-0-1-xis-1-1-serve-future-json" />
	<name value="Nictiz MedMij eAppointment - XIS Server - Scenario 1.1 - Serve Person 1 Future - JSON" />
	<status value="active" />
	<date value="2018-03-27" />
	<publisher value="Nictiz" />
	<contact>
		<name value="Nictiz"/>
		<telecom>
			<system value="email"/>
			<value value="kwalificatie@nictiz.nl"/>
			<use value="work"/>
		</telecom>
	</contact>
	<description value="MedMij eAppointment for FHIR STU3 (v3.0.1) - Scenario 1.1: Serve Future Appointments - JSON Format - All appointments of person 1 in period from 1 January 2018 and everything in the future (3 appointments to 3 different specialisms). Search parameters used: patient (match person 1), date (greater than or equal to 1 January 2018)." />
	<copyright value="Â© Nictiz 2018" />

	<fixture id="patient-token-fixture">
		<resource>
			<reference value="../_reference/resources/eAfspraak-Patient-Token-kwalificatie1.json" />
		</resource>
	</fixture>
	<fixture id="appointment1-fixture">
		<resource>
			<reference value="../_reference/resources/eAfspraak-Appointment-kwalificatie1.json" />
		</resource>
	</fixture>
	<fixture id="appointment2-fixture">
		<resource>
			<reference value="../_reference/resources/eAfspraak-Appointment-kwalificatie2.json" />
		</resource>
	</fixture>
	<fixture id="appointment3-fixture">
		<resource>
			<reference value="../_reference/resources/eAfspraak-Appointment-kwalificatie3.json" />
		</resource>
	</fixture>

	<profile id="Bundle-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Bundle" />
	</profile>

	<variable>
		<name value="patient-token-id" />
		<path value=".id" />
		<sourceId value="patient-token-fixture" />
	</variable>
	<variable>
		<name value="query-date" />
		<defaultValue value="ge2018-01-01" />
	</variable>
	<variable>
		<name value="appointment1-id" />
		<path value=".id" />
		<sourceId value="appointment1-fixture" />
	</variable>
	<variable>
		<name value="appointment2-id" />
		<path value=".id" />
		<sourceId value="appointment2-fixture" />
	</variable>
	<variable>
		<name value="appointment3-id" />
		<path value=".id" />
		<sourceId value="appointment3-fixture" />
	</variable>

	<!-- No Setup -->

	<test id="01-ServeAppointments">
		<name value="01-ServeAppointments" />
		<description value="Test XIS Server query search operation for known Appointments of person 1 and in period from 1 January 2018 and everything in the future. The expected response code is 200(OK) and content is a searchset Bundle resource where multiple entries of found Appointment resources are returned in JSON format." />
		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes" />
					<code value="search" />
				</type>
				<resource value="Appointment" />
				<description value="XIS Server query search operation for known Appointments." />
				<accept value="json" />
				<contentType value="none" />
				<params value="?${query-date}" />
				<requestHeader>  <!-- 0..* Each operation can have one or more header elements -->
					<field value="Authorization"/><!-- 1..1 HTTP header field name: OAuth access token -->
					<value value="${patient-token-id}"/><!-- 1..1 HTTP headerfield value: UUID4 -->
				</requestHeader>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)." />
				<direction value="response" />
				<responseCode value="200" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+json'." />
				<direction value="response" />
				<contentType value="json" />
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle." />
				<direction value="response" />
				<resource value="Bundle" />
			</assert>
		</action>
	</test>
</TestScript>