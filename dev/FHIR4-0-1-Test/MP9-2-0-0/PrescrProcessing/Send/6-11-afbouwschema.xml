               <code value="delete"/>
            </type>
            <resource value="Medication"/>
            <encodeRequestUrl value="true"/>
            <params value="${Medication-1}"/>
         </operation>
      </action>
      <action>
         <operation>
            <type>
               <system value="http://touchstone.com/fhir/extended-operation-codes"/>
               <code value="purge"/>
            </type>
            <resource value="Patient"/>
            <encodeRequestUrl value="true"/>
            <params value="${patient-id}/$purge"/>
         </operation>
      </action>
   </teardown>
</TestScript>
