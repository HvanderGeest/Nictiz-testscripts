    <fixture id="patient1-token-fixture">
        <resource>
            <reference value="../_reference/resources-generic/medmij-selfmeasurements-fhir3-0-1-Patient-Token-kwalificatie1.xml"/>
        </resource>
    </fixture>
    <fixture id="scenario-2-3-bundle-fixture">
        <resource>
            <reference value="../_reference/resources-serve-receive/medmij-selfmeasurements-fhir3-0-1-scenario-2-3-bundle.xml"/>
