<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">  
    <id value="medmij-pdfa-fhir3-0-1-xis-1-4-serve-0-documentreference-xml"/>  
    <url value="http://nictiz.nl/fhir/fhir3-0-1/TestScript/medmij-pdfa-fhir3-0-1-xis-1-4-serve-documentreference-xml"/>  
    <name value="Nictiz MedMij PDFA - XIS Server - Scenario 1.4 - Serve 3 DocumentReference - XML"/>  
    <status value="active"/>  
    <date value="2018-06-13"/>  
    <publisher value="Nictiz"/>  
    <contact> 
        <name value="Nictiz"/>  
        <telecom> 
            <system value="email"/>  
            <value value="kwalificatie@nictiz.nl"/>  
            <use value="work"/> 
        </telecom> 
    </contact>  
    <description value="MedMij PDFA for FHIR STU3 (v3.0.1) - Scenario 1.4: Query PDF/A DocumentReference - XML Format - Query all PDFA DocumentReference resources of person 1 using a incorrect search parameters. Response consists of all 3 DocumentReference resources of person 1."/>  
    <copyright value="Â© Nictiz 2018"/>  
  
    <fixture id="patient-token-fixture">
        <resource>
            <reference value="../_reference/resources/medmij-pdfa-fhir3-0-1-Patient-Token-kwalificatie1.xml" />
        </resource>
    </fixture>
  
    <fixture id="documentreference1-fixture"> 
        <resource> 
            <reference value="../_reference/resources/medmij-pdfa-fhir3-0-1-DocumentReference-kwalificatie1.xml"/> 
        </resource> 
    </fixture>  
    <fixture id="documentreference2-fixture"> 
        <resource> 
            <reference value="../_reference/resources/medmij-pdfa-fhir3-0-1-DocumentReference-kwalificatie2.xml"/> 
        </resource> 
    </fixture>  
    <fixture id="documentreference3-fixture"> 
        <resource> 
            <reference value="../_reference/resources/medmij-pdfa-fhir3-0-1-DocumentReference-kwalificatie3.xml"/> 
        </resource> 
    </fixture>  
    
    <profile id="Bundle-profile"> 
        <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/> 
    </profile>  
    
    <variable>
        <name value="patient-token-id" />
        <path value=".id" />
        <sourceId value="patient-token-fixture" />
    </variable>
     
    <!-- No Setup -->
    
    <test id="01-ServeDocumentReference"> 
        <name value="01-ServeDocumentReference"/>  
        <description value="Test XIS Server query search operation for known DocumentReference resources of person 1 for an incorrect use of search parameters. The expected response code is 200(OK) and content is a searchset Bundle resource where 3 DocumentReference entries are returned in XML format."/>  
        <action> 
            <operation> 
                <type> 
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>  
                    <code value="search"/> 
                </type>  
                <resource value="DocumentReference"/>  
                <description value="XIS Server query search operation for known DocumentReference using incorrect search parameter values."/>  
                <accept value="xml"/>  
                <contentType value="none"/>  
                <params value="?indexed=ge2018-78-01&amp;indexed=le2018-12-32&amp;status=current"/> 
                <requestHeader>  <!-- 0..* Each operation can have one or more header elements -->
                    <field value="Authorization"/><!-- 1..1 HTTP header field name: OAuth access token -->
                    <value value="${patient-token-id}"/><!-- 1..1 HTTP headerfield value: UUID4 -->
                </requestHeader>
            </operation> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned HTTP status is 200(OK)."/>  
                <direction value="response"/>  
                <responseCode value="200"/> 
            </assert> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'."/>  
                <direction value="response"/>  
                <contentType value="xml"/> 
            </assert> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned resource type is Bundle."/>  
                <direction value="response"/>  
                <resource value="Bundle"/> 
            </assert> 
        </action> 
        <action> 
            <assert> 
                <description value="Confirm that the returned Bundle type is searchset."/>  
                <direction value="response"/>  
                <operator value="equals"/>  
                <path value="Bundle/type"/>  
                <value value="searchset"/> 
            </assert> 
        </action>  
        <!-- Expression is not 100% correct. Need an improved expression. It is not mandatory to state OperationOutcome in a fullUrl if it is about a OperationOutcome.
        <action> 
            <assert> 
                <description value="Confirm that the returned Bundle entry contains an OperationOutcome resource."/>  
                <direction value="response"/>  
                <operator value="equals"/>  
                <expression value="entry.where(fullUrl.contains('OperationOutcome')).count() = 1"/>  
                <value value="true"/> 
            </assert> 
        </action> 
        -->
        <action> 
            <assert> 
                <description value="Confirm that the returned searchset Bundle contains 3 entries."/>  
                <direction value="response"/>  
                <expression value="Bundle.entry.count() = 4"/> 
            </assert> 
        </action>  
        <action>
            <assert>
                <description value="Confirm that the returned Bundle conforms to the base FHIR specification." />
                <direction value="response" />
                <validateProfileId value="Bundle-profile" />
                <warningOnly value="true"/>
            </assert>
        </action>
    </test> 
</TestScript>