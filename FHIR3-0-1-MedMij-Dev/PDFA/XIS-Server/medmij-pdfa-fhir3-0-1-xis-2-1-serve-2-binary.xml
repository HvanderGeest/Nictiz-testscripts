<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">  
    <id value="medmij-pdfa-fhir3-0-1-xis-2-1-serve-2-binary-xml"/>  
    <url value="http://nictiz.nl/fhir/fhir3-0-1/TestScript/medmij-pdfa-fhir3-0-1-xis-2-1-serve-binary-xml"/>  
    <name value="Nictiz MedMij PDFA - XIS Server - Scenario 2.1 - Serve 2 times 1 Binary - XML"/>  
    <status value="active"/>  
    <date value="2018-05-23"/>  
    <publisher value="Nictiz"/>  
    <contact> 
        <name value="Nictiz"/>  
        <telecom> 
            <system value="email"/>  
            <value value="kwalificatie@nictiz.nl"/>  
            <use value="work"/> 
        </telecom> 
    </contact>  
    <description value="MedMij PDFA for FHIR STU3 (v3.0.1) - Scenario 2.1: Read PDF/A Binary - XML Format - read two times a PDFA Binary resources of person 1. Two responses that consist of 1 Binary resource."/>  
    <copyright value="Â© Nictiz 2018"/>  
    <fixture id="binary1-fixture"> 
        <resource> 
            <reference value="../_reference/resources/medmij-pdfa-fhir3-0-1-Binary-kwalificatie1.xml"/> 
        </resource> 
    </fixture>
    <fixture id="binary2-fixture"> 
        <resource> 
            <reference value="../_reference/resources/medmij-pdfa-fhir3-0-1-Binary-kwalificatie2.xml"/> 
        </resource> 
    </fixture>  
    <profile id="Binary-profile"> 
        <reference value="http://hl7.org/fhir/StructureDefinition/Binary"/> 
    </profile>  
    <variable> 
        <name value="binary1-id"/>  
        <expression value="Binary.id"/>
        <sourceId value="binary1-fixture"/> 
    </variable>  
    <variable> 
        <name value="binary2-id"/>  
        <expression value="Binary.id"/>
        <sourceId value="binary2-fixture"/> 
    </variable>  
    <!-- No Setup -->
    
    <test id="01-ServeBinary"> 
        <name value="01-ServeBinary"/>  
        <description value="Test XIS Server read operation for known Binary resource of person 1. The expected response code is 200(OK) and content is a Binary resource returned in XML format containing a PDF/A document."/>  
        <action> 
            <operation> 
                <type> 
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>  
                    <code value="read"/> 
                </type>  
                <resource value="Binary"/>  
                <description value="XIS Server read operation for known Binary resource."/>  
                <accept value="xml"/>  
                <contentType value="none"/>  
                <params value="/${binary1-id}"/> 
            </operation> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned HTTP status is 200(OK)."/>  
                <direction value="response"/>  
                <responseCode value="200"/> 
            </assert> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'."/>  
                <direction value="response"/>  
                <contentType value="xml"/> 
            </assert> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned resource type is DocumentReference."/>  
                <direction value="response"/>  
                <resource value="Binary"/> 
            </assert> 
        </action> 
        <action> 
            <assert> 
                <description value="Confirm that the returned Binary resource contains the expected id."/>  
                <direction value="response"/>  
                <operator value="equals"/>  
                <expression value="Binary.id"/>  
                <value value="${binary1-id}"/> 
            </assert> 
        </action> 
        <action> 
            <assert> 
                <description value="Confirm that the returned Binary resource has application/pdf as contentType"/>  
                <direction value="response"/>  
                <operator value="equals"/>  
                <expression value="Binary.contentType"/>  
                <value value="application/pdf"/> 
            </assert> 
        </action> 
        <action>
            <assert>
                <description value="Confirm that the returned Binary resources conforms to base profile. It should have a value for content." />
                <direction value="response" />
                <validateProfileId value="Binary-profile" />
            </assert>
        </action>
    </test>
