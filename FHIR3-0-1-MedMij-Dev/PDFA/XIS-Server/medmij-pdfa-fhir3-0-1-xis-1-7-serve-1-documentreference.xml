<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">  
    <id value="medmij-pdfa-fhir3-0-1-xis-1-7-serve-1-documentreference-xml"/>  
    <url value="http://nictiz.nl/fhir/fhir3-0-1/TestScript/medmij-pdfa-fhir3-0-1-xis-1-7-serve-documentreference-xml"/>  
    <name value="Nictiz MedMij PDFA - XIS Server - Scenario 1.7 - Serve 1 DocumentReference - XML"/>  
    <status value="active"/>  
    <date value="2018-05-23"/>  
    <publisher value="Nictiz"/>  
    <contact> 
        <name value="Nictiz"/>  
        <telecom> 
            <system value="email"/>  
            <value value="kwalificatie@nictiz.nl"/>  
            <use value="work"/> 
        </telecom> 
    </contact>  
    <description value="MedMij PDFA for FHIR STU3 (v3.0.1) - Scenario 1.7: Read PDF/A DocumentReference - XML Format - read a PDFA DocumentReference resources of person 2. Response consists of 1 DocumentReference resource."/>  
    <copyright value="Â© Nictiz 2018"/>  
    <fixture id="patient2-fixture"> 
        <resource> 
            <reference value="../_reference/resources/PDFA-Patient-kwalificatie2.xml"/> 
        </resource> 
    </fixture>  
    <fixture id="documentreference4-fixture"> 
        <resource> 
            <reference value="../_reference/resources/PDFA-DocumentReference-kwalificatie4.xml"/> 
        </resource> 
    </fixture>  
    <profile id="MHD-profile"> 
        <reference value="http://ihe.net/fhir/StructureDefinition/IHE.MHD.Query.Minimal.DocumentReference"/> 
    </profile>  
    <variable> 
        <name value="patient2-id"/>  
        <expression value="Patient.id"/>
        <sourceId value="patient2-fixture"/> 
    </variable>  
    <variable> 
        <name value="documentreference4-id"/>  
        <expression value="DocumentReference.id"/>
        <sourceId value="documentreference4-fixture"/> 
    </variable>  
    
    <!-- No Setup -->
    
    <test id="01-ServeDocumentReference"> 
        <name value="01-ServeDocumentReference"/>  
        <description value="Test XIS Server read operation for known DocumentReference resource person 2. The expected response code is 200(OK) and content is a DocumentReference resource returned in XML format."/>  
        <action> 
            <operation> 
                <type> 
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>  
                    <code value="search"/> 
                </type>  
                <resource value="DocumentReference"/>  
                <description value="XIS Server query search operation for known DocumentReference with a current status."/>  
                <accept value="xml"/>  
                <contentType value="none"/>  
                <params value="/${documentreference4-id}"/> 
            </operation> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned HTTP status is 200(OK)."/>  
                <direction value="response"/>  
                <responseCode value="200"/> 
            </assert> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'."/>  
                <direction value="response"/>  
                <contentType value="xml"/> 
            </assert> 
        </action>  
        <action> 
            <assert> 
                <description value="Confirm that the returned resource type is DocumentReference."/>  
                <direction value="response"/>  
                <resource value="DocumentReference"/> 
            </assert> 
        </action> 
        <action> 
            <assert> 
                <description value="Confirm that the returned Documentreference contains the expected DocumentReference resource id."/>  
                <direction value="response"/>  
                <operator value="equals"/>  
                <expression value="DocumentReference.id"/>  
                <value value="${documentreference4-id}"/> 
            </assert> 
        </action> 
        <action> 
            <assert> 
                <description value="Confirm that the returned DocumentReference has person 2 as subject"/>  
                <direction value="response"/>  
                <operator value="contains"/>  
                <expression value="subject.reference"/>  
                <value value="Patient/${patient2-id}"/> 
            </assert> 
        </action> 
        <action>
            <assert>
                <description value="Confirm that the returned DocumentReference conforms to the IHE MHD DocumentReference profile." />
                <direction value="response" />
                <validateProfileId value="MHD-profile" />
            </assert>
        </action>
    </test> 
</TestScript>
