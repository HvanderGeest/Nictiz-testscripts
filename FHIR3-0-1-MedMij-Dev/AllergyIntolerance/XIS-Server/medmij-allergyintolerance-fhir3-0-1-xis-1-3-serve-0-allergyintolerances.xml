<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">  
  <id value="medmij-allergyintolerance-fhir3-0-1-xis-1-3-serve-1-allergyintolerance-xml"/>  
  <url value="http://nictiz.nl/fhir/fhir3-0-1/TestScript/medmij-allergyintolerance-fhir3-0-1-phr-1-3-retrieve-allergyintolerance-xml"/>  
  <name value="Nictiz MedMij PDFA - XIS Server - Scenario 1.3 - Serve 0 AlleryIntolerance resource - XML"/>  
  <status value="active"/>  
  <date value="2018-08-02"/>  
  <publisher value="Nictiz"/>  
  <contact> 
    <name value="Nictiz"/>  
    <telecom> 
      <system value="email"/>  
      <value value="kwalificatie@nictiz.nl"/>  
      <use value="work"/> 
    </telecom> 
  </contact>  
  <description value="MedMij PDFA for FHIR STU3 (v3.0.1) - Scenario 1.3: Serve AllergyIntolerance by date - XML Format - Serve AllergyIntolerance resources of person 1 after being queried by onset date. Response consists of 0 AllergyIntolerance resources."/>  
  <copyright value="Â© Nictiz 2018"/>    
  <fixture id="patient-token-fixture">
    <resource>
      <reference value="../_reference/resources/medmij-allergyintolerance-fhir3-0-1-Patient-Token-kwalificatie1.json" />
    </resource>
  </fixture>  
  <fixture id="allergyintolerance1-fixture"> 
    <resource> 
      <reference value="../_reference/resources/medmij-allergyintolerance-fhir3-0-1-allergyintolerance1-beevenom.xml"/> 
    </resource> 
  </fixture>  
  <fixture id="allergyintolerance2-fixture"> 
    <resource> 
      <reference value="../_reference/resources/medmij-allergyintolerance-fhir3-0-1-allergyintolerance2-peanut.xml"/> 
    </resource> 
  </fixture>    
  <profile id="Bundle-profile"> 
    <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/> 
  </profile>  
  <variable>
    <name value="patient-token-id" />
    <expression value="Patient.id"/>
    <sourceId value="patient-token-fixture" />
  </variable>
  <variable> 
    <name value="allergyintolerance1-code"/>  
    <expression value="AllergyIntolerance.code.coding[0].code"/>
    <sourceId value="allergyintolerance1-fixture"/> 
  </variable>  
  <variable> 
    <name value="allergyintolerance2-code"/>  
    <expression value="AllergyIntolerance.code.coding[0].code"/>
    <sourceId value="allergyintolerance2-fixture"/> 
  </variable>  
  
  <!-- No Setup -->
  
  <test id="01-ServeAllergyIntolerances">     
    <name value="01-ServeAllergyIntolerances"/>  
    <description value="Test XIS Server query search operation for known AllergyIntolerance of person 1. The expected response code is 200(OK) and content is a searchset Bundle resource where 2 entries of found AllergyIntolerance resources are returned in XML format."/>  
    <action> 
      <operation> 
        <type> 
          <system value="http://hl7.org/fhir/testscript-operation-codes"/>  
          <code value="search"/> 
        </type>  
        <resource value="AllergyIntolerance"/>  
        <description value="XIS Server query search operation for known AllergyIntolerances."/>  
        <accept value="xml"/>  
        <contentType value="none"/>  
        <params value="?onset=ge1980-01-01&amp;onset=le1981-12-31" />
        <requestHeader>  <!-- 0..* Each operation can have one or more header elements -->
          <field value="Authorization"/><!-- 1..1 HTTP header field name: OAuth access token -->
          <value value="${patient-token-id}"/><!-- 1..1 HTTP headerfield value: UUID4 -->
        </requestHeader>        
      </operation> 
    </action>  
    <action> 
      <assert> 
        <description value="Confirm that the returned HTTP status is 200(OK)."/>  
        <direction value="response"/>  
        <responseCode value="200"/> 
      </assert> 
    </action> 
    <action> 
      <assert> 
        <description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'."/>  
        <direction value="response"/>  
        <contentType value="xml"/> 
      </assert> 
    </action>  
    <action> 
      <assert> 
        <description value="Confirm that the returned resource type is Bundle."/>  
        <direction value="response"/>  
        <resource value="Bundle"/> 
      </assert> 
    </action> 
    <action>
      <assert>
        <description value="Confirm that the returned Bundle conforms to the base FHIR specification." />
        <direction value="response" />
        <validateProfileId value="Bundle-profile" />
      </assert>
    </action>
    <action> 
      <assert> 
        <description value="Confirm that the returned Bundle type is searchset."/>  
        <direction value="response"/>  
        <operator value="equals"/>  
        <path value="Bundle/type"/>  
        <value value="searchset"/> 
      </assert> 
    </action>  
    <action> 
      <assert> 
        <description value="Confirm that the returned searchset Bundle contains 2 entries."/>  
        <direction value="response"/>  
        <expression value="Bundle.entry.count() = 0"/>  
      </assert> 
    </action>  
    <action>
      <assert>
        <description value="Confirm that the returned Bundle total value matches or is greater than the number of entries in the Bundle." />
        <direction value="response" />
        <expression value="Bundle.total.toInteger() &gt;= entry.count()" />
      </assert>
    </action>
    <action>
      <assert>
        <description value="Confirm that the returned Bundle contains the entry of the second AllergyIntolerance." />
        <direction value="response" />
        <expression value="Bundle.entry[0].resource.code.coding[0].code" />
        <operator value="notEquals"/>          
        <value value="${allergyintolerance2-code}"/>
      </assert>
    </action>
    <action>
      <assert>
        <description value="Confirm that the returned Bundle does not contain the first AllergyIntolerance." />
        <direction value="response" />
        <expression value="Bundle.entry[0].resource.code.coding[0].code" />
        <operator value="notEquals"/>          
        <value value="${allergyintolerance1-code}"/>
      </assert>
    </action>
  </test> 
</TestScript>
