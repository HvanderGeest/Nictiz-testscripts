<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">  
    <id value="medmij-medication-medicationagreement-fhir3-0-1-phr-1-4"/>  
    <url value="http://nictiz.nl/fhir/fhir3-0-1/TestScript/medmij-medication-medicationagreement-fhir3-0-1-phr-1-6"/>  
    <name value="Nictiz MedMij Medication - PHR Client - Scenario 1.6 - Retrieve MedicationAgreements based on period of use start and end date - XML"/>  
    <status value="active"/>  
    <date value="2018-09-11"/>  
    <publisher value="Nictiz"/>  
    <contact> 
        <name value="Nictiz"/>  
        <telecom> 
            <system value="email"/>  
            <value value="kwalificatie@nictiz.nl"/>  
            <use value="work"/> 
        </telecom> 
    </contact>  
    <description value="MedMij Medication for FIR STU3 (v3.0.1) - Scenario 1.6: Retrieve MedicationAgreements based on period of use start date - XML Format - All MedicationRequest resources that represent a MedicationAgreement of XXX_Dirksz with a period of between of T-180 and T. Response consists of 3 MedicationRequest resources."/>  
    <copyright value="Â© Nictiz 2018"/>      
    <origin>
        <index value="1" />
        <profile>
            <system value="http://hl7.org/fhir/testscript-profile-origin-types"/>
            <code value="FHIR-Client"/>
        </profile>
    </origin>
    <destination>
        <index value="1" />
        <profile>
            <system value="http://hl7.org/fhir/testscript-profile-destination-types"/>
            <code value="FHIR-Server"/>
        </profile>
    </destination>    
   
    <fixture id="Patient-e2696872-f855-4283-a01b-c0db9c50bde2-fixture">
        <resource>
            <reference value="../../_reference/mp9-nl-core-patient-XXX-DIRKSZ-token.xml" />
        </resource>
    </fixture>
    
    <profile id="Bundle-profile"> 
      <reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/> 
    </profile>   
    
    <variable>
        <name value="Patient-e2696872-f855-4283-a01b-c0db9c50bde2-id" />
        <expression value="Patient.id" />
        <sourceId value="Patient-e2696872-f855-4283-a01b-c0db9c50bde2-fixture" />
    </variable>       
    
    <test id="01-Retrieve-MedicationAgreements-PeriodOfUse-EndDate"> 
        <name value="01-Retrieve-Specific-MedicationAgreement-PeriodOfUse-EndDate"/>
        <description value="Test PHR Client retrieve search operation for MedicationRequest resources with a category code for MedicationAgreement and a period of use end date of between T-180 and T, of XXX_Dirksz. The expected response code is 200(OK) and content is a searchset Bundle resource with 3 MedicationRequest resources, returned in XML format."/>  
        <action> 
            <operation> 
                <type> 
                    <system value="http://hl7.org/fhir/testscript-operation-codes"/>  
                    <code value="search"/> 
                </type>  
                <resource value="MedicationRequest"/>  
                <description value="PHR client retrieve search operation for MedicationRequest resources with a category code for MedicationAgreement and a specifc product code, and include Medication resources."/>  
                <accept value="xml"/>  
                <contentType value="none" />
                <destination value="1" />
                <origin value="1" />
              <params value="?category=http://snomed.info/sct|16076005&amp;periodofuse=ge${CURRENTDATE,d,-180}&amp;periodofuse=le${CURRENTDATE,d,-0}"/> 
            </operation> 
        </action>        
        <action>
            <assert>
                <description value="Confirm that the client requested an Accept of the FHIR XML mime type 'application/fhir+xml'."/>
                <direction value="request"/>
                <headerField value="Accept"/>
                <operator value="contains"/>
                <value value="application/fhir+xml"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the client did not request a Content-Type. Warning only to allow for systems that automatically send Content-Type."/>
                <direction value="request"/>
                <headerField value="Content-Type"/>
                <operator value="empty"/>
                <warningOnly value="true"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that HTTP header Authorization contains the patient token ${Patient-e2696872-f855-4283-a01b-c0db9c50bde2-id}"/>
                <direction value="request"/>
                <headerField value="Authorization"/>
                <value value="${Patient-e2696872-f855-4283-a01b-c0db9c50bde2-id}"/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation query parameter 'patient=' was not present to avoid BSNs in the URL."/>
                <direction value="request"/>
                <operator value="notContains"/>
                <requestURL value="patient="/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the Observation query parameter 'subject=' was not present to avoid BSNs in the URL."/>
                <direction value="request"/>
                <operator value="notContains"/>
                <requestURL value="subject="/>
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP status is 200(OK)." />
                <direction value="response" />
                <responseCode value="200" />
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned HTTP Header Content-Type contains the FHIR mime-type 'application/fhir+xml'." />
                <direction value="response" />
                <contentType value="xml" />
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned resource type is Bundle." />
                <direction value="response" />
                <resource value="Bundle" />
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle type is searchset." />
                <direction value="response" />
                <expression value="Bundle.type" />
                <operator value="equals" />
                <value value="searchset" />
            </assert>
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle total value matches or is less than the number of entries in the Bundle. The included resources should not be counted as entries in the .total." />
                <direction value="response" />
                <expression value="Bundle.total.toInteger() &lt;= entry.count()" />
            </assert>
        </action>
        <action> 
            <assert> 
                <description value="Confirm that the returned searchset Bundle contains 3 entries."/>  
                <direction value="response"/>  
                <expression value="Bundle.entry.count() = 3"/>  
            </assert> 
        </action>
        <action>
            <assert>
                <description value="Confirm that the returned Bundle conforms to the base FHIR specification." />
                <direction value="response" />
                <validateProfileId value="Bundle-profile" />
            </assert>
        </action>
    </test>
</TestScript>
